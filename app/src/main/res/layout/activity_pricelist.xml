<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nz.co.modtec.integbdm.Pricelist"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/passwordInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pricelistquery"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/pricepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordInstructions"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/gobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="Go"
        app:layout_constraintBaseline_toBaselineOf="@+id/pricepassword"
        app:layout_constraintLeft_toRightOf="@+id/pricepassword" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pricepassword"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="800dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:columnCount="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pricepassword">

            <Button
                android:id="@+id/AusMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Australian Minimum Dealer"
                app:layout_constraintTop_toBottomOf="@+id/pricepassword"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:id="@+id/AusStd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Australian Standard Dealer"
                app:layout_constraintTop_toBottomOf="@+id/pricepassword"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:id="@+id/NZMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="New Zealand Minimum"
                app:layout_constraintTop_toBottomOf="@+id/pricepassword"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:id="@+id/NZStd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="New Zealand Standard Dealer"
                app:layout_constraintTop_toBottomOf="@+id/pricepassword"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:id="@+id/IndMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="India Minimum Dealer"
                app:layout_constraintTop_toBottomOf="@+id/pricepassword"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:id="@+id/IndStd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="India Standard Dealer"
                app:layout_constraintTop_toBottomOf="@+id/pricepassword"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:id="@+id/HawInd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Haworth India"
                app:layout_constraintTop_toBottomOf="@+id/pricepassword"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:id="@+id/SteelInd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Steelcase India"
                app:layout_constraintTop_toBottomOf="@+id/pricepassword"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:id="@+id/hiddenbutton"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginTop="8dp"
                android:text="Hidden button, this adds margin to the scrollview, for some reason the scrollview wouldnt go all the way up when the keyboard was up"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@+id/pricepassword"
                tools:layout_editor_absoluteX="16dp" />

        </GridLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
